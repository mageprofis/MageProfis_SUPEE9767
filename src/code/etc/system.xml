<?xml version="1.0"?>
<config>
    <sections>
        <dev translate="label" module="core">
            <groups>
                <template translate="label" module="core">
                    <label>Template Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>25</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <allow_symlink translate="label comment" module="core">
                            <label>Allow Symlinks</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Warning! Enabling this feature is not recommended on production environments because it represents a potential security risk.</comment>
                        </allow_symlink>
                        <allow_only_template_files translate="label comment" module="core">
                            <label>Allow Only Template Files</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Warning! When your Enable this Feature, you can use Template Files with defined extensions like phtml, html and tpl</comment>
                        </allow_only_template_files>
                    </fields>
                </template>
            </groups>
        </dev>
    </sections>
</config>
